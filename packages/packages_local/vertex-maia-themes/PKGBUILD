pkgname=vertex-maia-themes
pkgver=1
pkgrel=0
pkgdesc='Maia gtk themes'
arch=('i686' 'x86_64')
license=(GPL)
license=('LGPL')
depends=('curl')

package() {
    install -d "$pkgdir/usr/share/themes"
    cp -r "${srcdir}/Vertex-Maia" "$pkgdir/usr/share/themes"
    chmod 755 "$pkgdir/usr/share/themes/Vertex-Maia"
}
